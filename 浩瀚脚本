local Window = Rayfield:CreateWindow({
    Name = "𝗦𝗖𝗥𝗜𝗣𝗧 𝗛𝗨𝗕 | 炫黑界面",
    LoadingTitle = "正在加载脚本中心...",
    LoadingSubtitle = "请稍候片刻",
    Theme = "Dark",
    Icon = "rbxassetid://0",
    ToggleUIKeybind = "RightControl",
    ConfigurationSaving = {
        Enabled = false,
        FolderName = "ScriptHub",
        FileName = "Config"
    }
})


local MainTab = Window:CreateTab("🏠 主页面", "house")
local ScriptsTab = Window:CreateTab("⚙️ 脚本库", "settings")
local SettingsTab = Window:CreateTab("🔧 设置", "tool")


MainTab:CreateSection("欢迎使用脚本中心")

MainTab:CreateParagraph({
    Title = "脚本加载器",
    Content = "这是一个炫黑风格的脚本加载界面，提供多种游戏脚本一键加载功能。请选择左侧标签页中的脚本并点击加载。"
})

MainTab:CreateSection("使用指南")

local Keybind = MainTab:CreateKeybind({
    Name = "界面显示/隐藏快捷键",
    CurrentKeybind = "RightControl",
    HoldToInteract = false,
    Callback = function(Keybind)
        Window:ChangeToggleKeybind(Keybind)
    end,
})

MainTab:CreateButton({
    Name = "刷新界面",
    Callback = function()
        Rayfield:Notify({
            Title = "界面已刷新",
            Content = "所有组件已重新加载",
            Duration = 3,
            Image = 1060112305
        })
    end
})


ScriptsTab:CreateSection("常用脚本")

ScriptsTab:CreateButton({
    Name = "🛩️ 飞行脚本",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/FlyScript/main/FlyScriptV3"))()
        Rayfield:Notify({
            Title = "飞行脚本已加载",
            Content = "按E键激活飞行功能",
            Duration = 5,
            Image = 1060112305
        })
    end
})

ScriptsTab:CreateButton({
    Name = "⚡ 速度脚本",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/SpeedScript/main/SpeedScript"))()
        Rayfield:Notify({
            Title = "速度脚本已加载",
            Content = "使用方向键移动，速度已提升",
            Duration = 5,
            Image = 1060112305
        })
    end
})

ScriptsTab:CreateSection("游戏专用")

ScriptsTab:CreateButton({
    Name = "🎮 通用脚本合集",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/gycgchgyfytdttr/shenqin/main/99day.lua"))()
        Rayfield:Notify({
            Title = "通用脚本已加载",
            Content = "功能菜单已打开，请查看界面",
            Duration = 5,
            Image = 1060112305
        })
    end
})

ScriptsTab:CreateButton({
    Name = "🧠 红脑脚本",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/tienkhanh1/spicy/main/Chilli.lua"))()
        Rayfield:Notify({
            Title = "红脑脚本已加载",
            Content = "功能已激活，请查看界面",
            Duration = 5,
            Image = 1060112305
        })
    end
})

ScriptsTab:CreateDropdown({
    Name = "选择游戏",
    Options = {"通用", "Brookhaven", "Arsenal", "Doors", "Pet Simulator X"},
    CurrentOption = "通用",
    Callback = function(Option)
        Rayfield:Notify({
            Title = "游戏模式已切换",
            Content = "当前选择: " .. Option,
            Duration = 3,
            Image = 1060112305
        })
    end
})


SettingsTab:CreateSection("界面设置")

SettingsTab:CreateToggle({
    Name = "显示界面水印",
    CurrentValue = true,
    Callback = function(Value)
        Window:SetWatermark(Value and "𝗦𝗖𝗥𝗜𝗣𝗧 𝗛𝗨𝗕 | v1.0.0" or "")
    end
})

SettingsTab:CreateToggle({
    Name = "启用快捷键提示",
    CurrentValue = true,
    Callback = function(Value)
        Window:SetWatermarkVisibility(Value)
    end
})

SettingsTab:CreateSlider({
    Name = "界面透明度",
    Range = {0, 100},
    Increment = 5,
    Suffix = "%",
    CurrentValue = 80,
    Callback = function(Value)
        Window:SetOpacity(Value / 100)
    end
})

SettingsTab:CreateSection("个性化")

local ColorPicker = SettingsTab:CreateColorPicker({
    Name = "主题颜色",
    Color = Color3.fromRGB(0, 255, 255),
    Callback = function(Value)
        Window:ChangeThemeColor(Value)
    end
})

SettingsTab:CreateInput({
    Name = "自定义用户名",
    PlaceholderText = "输入你的用户名",
    RemoveTextAfterFocusLost = false,
    Callback = function(Text)
        if Text ~= "" then
            Window:SetWatermark("𝗦𝗖𝗥𝗜𝗣𝗧 𝗛𝗨𝗕 | " .. Text)
        end
    end
})


Rayfield:Notify({
    Title = "脚本中心已就绪",
    Content = "欢迎使用炫黑界面脚本加载器",
    Duration = 6,
    Image = 1060112305
})
```
